<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.myapplication.data.model.DisabilityData" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background_color">

        <!-- Profile Title -->
        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Details"
            android:textSize="48sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_picker"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <!-- Name Display -->
        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{user.name}" />

        <!-- Age Display -->
        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Name"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{String.valueOf(user.age)}" />

        <!-- Phone Display -->
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/age"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{user.phone}" />

        <!-- Email Display -->
        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{user.email}" />

        <!-- Address Display -->
        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Email"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{user.address}" />

        <!-- Skills Display -->
        <TextView
            android:id="@+id/skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Address"
            android:textColor="@color/text_color"
            android:padding="12dp"
            android:text="@{user.skill}" />

        <!-- Disability Section -->
        <TextView
            android:id="@+id/disabilitys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Disability"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toBottomOf="@id/skill"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/disability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.disability}"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toBottomOf="@id/skill"
            app:layout_constraintStart_toEndOf="@id/disabilitys"
            android:layout_marginTop="16dp" />

        <!-- PDF Preview Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/pdfPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="preview_pdf"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"
            app:layout_constraintTop_toBottomOf="@id/disabilitys"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Apply Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/field_apply"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"
            android:textSize="16sp"
            app:cornerRadius="6dp"
            app:layout_constraintTop_toBottomOf="@id/pdfPreview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>
